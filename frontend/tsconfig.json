{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "vue",
    ],
    "paths": {
      "@/*": ["src/*"],
      "@engine": ["../engine/src"],
      "@engine/*": ["../engine/src/*"],
      "@assets": ["../assets"],
      "@assets/*": ["../assets/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "../engine",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
